@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-5 border rounded shadow">
        <h4 class="mt-2">Reset your password.</h4>
        <hr />
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">Enter your email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn shadow btn-primary btn-block mb-3"><i class="fas fa-paper-plane"></i>&nbsp;Send my password recovery email.</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
