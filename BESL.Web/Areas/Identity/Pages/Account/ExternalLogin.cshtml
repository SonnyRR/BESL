@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}
<div class="alert alert-success">
        You've successfully authenticated with <strong>@Model.LoginProvider</strong>.
        Please enter an email address for this site below and click the Register button to finish
        logging in.

</div>

<div class="row d-flex justify-content-center">
    <div class="col-md-5 border rounded shadow">
        <h4 class="mt-2">Link your @Model.LoginProvider account to BESL.</h4>
        <hr />
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="shadow-sm form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="shadow-sm form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn shadow btn-primary btn-block mb-3"><i class="fas fa-user-check"></i>&nbsp;Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
