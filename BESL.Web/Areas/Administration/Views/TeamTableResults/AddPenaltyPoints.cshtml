@model BESL.Application.TeamTableResults.Commands.AddPenaltyPoints.AddPenaltyPointsCommand
@{
    ViewData["ActivePage"] = ManageAdminNavPages.Tournaments;
    ViewData["Title"] = "Add penalty points";
}

<div class="col-md-7">
    <div class="border rounded">
        <h4 class="display-4 mt-2 mx-3">Add penalty points (TTR Id: @Model.TeamTableResultId)</h4>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form class="mx-3 my-2" method="post" enctype="multipart/form-data">
                    <div class="form-group mb-2">
                        <label asp-for="@Model.PenaltyPoints">Penalty points</label>
                        <select asp-for="@Model.PenaltyPoints" class="form-control form-control-sm">
                            <option selected disabled>Choose...</option>
                            <option value="">N/A</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                        </select>
                        <span asp-validation-for="@Model.PenaltyPoints" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-3"><i class="fas fa-plus-circle"></i>&nbsp;Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>