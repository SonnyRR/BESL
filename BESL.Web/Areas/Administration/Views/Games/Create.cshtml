@model BESL.Application.Games.Commands.CreateGame.CreateGameCommand
@{
    Layout = null;
}


<div class="border rounded mt-1 col-sm-5">
    <div class="container-fluid mt-2 mb-3">
        <h2>Create a game</h2>
        <form id="gameCreateForm" class="mb-3" enctype="multipart/form-data" method="post" data-ajax="true" data-ajax-loading="#spinner" data-ajax-url="/Administration/Games/Create" data-ajax-method="POST" data-ajax-update="#gamesMainContainer">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter name...">
                <span asp-validation-for="Name" class="text-danger"></span>
                <small id="gameNameHelp" class="form-text text-muted">The game's title.</small>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea class="form-control" asp-for="Description" rows="3" placeholder="Enter description..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <small id="gameDescHelp" class="form-text text-muted">Description of the game.</small>
            </div>

            <label asp-for="GameImage">Image</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="gameImageHelp">Upload</span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" asp-for="GameImage" name="gameImage" aria-describedby="gameImageHelp" data-val="true" data-val-required="Image file is required!">
                    <label class="custom-file-label" for="gameImage">Choose file</label>
                </div>
            </div>
            <span data-valmsg-for="gameImage" data-valmsg-replace="true" class="text-danger mb-6"></span>
            <button type="submit" class="btn btn-primary btn-block mt-3"><i class="fas fa-plus-circle"></i>&nbsp;Submit</button>
        </form>
   
        <div>
            <form data-ajax="true" data-ajax-loading="#spinner" data-ajax-url="/Administration/Games/All" data-ajax-method="GET" data-ajax-update="#gamesMainContainer">
                <button class="btn btn-primary btn-block"><i class="fas fa-arrow-circle-left"></i>&nbsp;Back</button>
            </form>
        </div>
    </div>
</div>

<script type="application/javascript" async defer>
    $('input[type="file"]').change(function(e){
        var fileName = e.target.files[0].name;
        $('.custom-file-label').html(fileName);

        var file = document.getElementById('imageUpload');

        var ext = this.value.match(/\.([^\.]+)$/)[1];
        var validExtensions = ['jpg', 'png', 'jpeg'];
        if (!validExtensions.includes(ext)) {
            alert('File type is not allowed!');
            this.value = '';
            $('.custom-file-label').html('Choose file');
        }
        
        $("#file_error").html("");

        var file_size = $('#file')[0].files[0].size;
        if(file_size>2097152) {
            $("#file_error").html("File size is greater than 2MB");
            return false;
        }
        return true;
    }

    });
</script>