@model BESL.Application.Games.Commands.CreateGame.CreateGameCommand
@{ 
    Layout = null;
}


<div class="border rounded mt-1">
    <div class="container-fluid mt-2 mb-3">
        <h3>Create a game</h3>

        <form class="mb-3" enctype="multipart/form-data" method="post" data-ajax="true" data-ajax-loading="#spinner" data-ajax-url="/Administration/Games/Create" data-ajax-method="POST" data-ajax-update="#gamesMainContainer">
            <div class="form-group col-md-6">
                <label for="name">Name</label>
                <input type="text" class="form-control" asp-for="Name" name="name" placeholder="Enter name...">
                <small id="gameNameHelp" class="form-text text-muted">The game's title.</small>
            </div>
            <div class="form-group col-md-6">
                <label for="description">Description</label>
                <textarea class="form-control" asp-for="Description" rows="3" name="description" placeholder="Enter description..."></textarea>
                <small id="gameDescHelp" class="form-text text-muted">Description of the game.</small>
            </div>
            <div class="input-group col-md-6 mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" asp-for="GameImage" name="gameImage" aria-describedby="inputGroupFileAddon01">
                    <label class="custom-file-label" for="gameImage">Choose file</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <form data-ajax="true" data-ajax-loading="#spinner" data-ajax-url="/Administration/Games/All" data-ajax-method="GET" data-ajax-update="#gamesMainContainer">
            <button class="btn btn-primary"><i class="fas fa-arrow-circle-left"></i>&nbsp;Back</button>
        </form>
    </div>
</div>

<script type="application/javascript">
    $('input[type="file"]').change(function(e){
        var fileName = e.target.files[0].name;
        $('.custom-file-label').html(fileName);
    });
</script>