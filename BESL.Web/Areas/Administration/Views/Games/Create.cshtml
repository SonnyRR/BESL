@model BESL.Application.Games.Commands.CreateGame.CreateGameCommand
@{
    Layout = null;
}


<div class="border rounded mt-1">
    <div class="container-fluid mt-2 mb-3">
        <h3>Create a game</h3>
        <form id="gameCreateForm" class="mb-3 col-sm-6" enctype="multipart/form-data" method="post" data-ajax="true" data-ajax-loading="#spinner" data-ajax-url="/Administration/Games/Create" data-ajax-method="POST" data-ajax-update="#gamesMainContainer">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter name...">
                <span asp-validation-for="Name" class="text-danger"></span>
                <small id="gameNameHelp" class="form-text text-muted">The game's title.</small>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea class="form-control" asp-for="Description" rows="3" placeholder="Enter description..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <small id="gameDescHelp" class="form-text text-muted">Description of the game.</small>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" asp-for="GameImage" name="gameImage" aria-describedby="inputGroupFileAddon01">
                    <label class="custom-file-label" for="gameImage">Choose file</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-plus-circle"></i>&nbsp;Submit</button>
        </form>
        <div class="col-sm-6">
            <form data-ajax="true" data-ajax-loading="#spinner" data-ajax-url="/Administration/Games/All" data-ajax-method="GET" data-ajax-update="#gamesMainContainer">
                <button class="btn btn-primary btn-block"><i class="fas fa-arrow-circle-left"></i>&nbsp;Back</button>
            </form>
        </div>
    </div>
</div>

<script type="application/javascript">
    $('input[type="file"]').change(function(e){
        var fileName = e.target.files[0].name;
        $('.custom-file-label').html(fileName);
    });
</script>
