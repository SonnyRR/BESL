@model BESL.Application.Games.Commands.Create.CreateGameCommand
@{
    Layout = null;
}

<div class="border rounded container-fluid mt-1 float-left col-lg-6">
    <div class="container-fluid mt-2 mb-3">
        <h2>Create a game</h2>
        <form id="gameCreateForm" class="mb-3" enctype="multipart/form-data" method="post" data-ajax="true" data-ajax-loading="#spinner" data-ajax-url="/Administration/Games/Create" data-ajax-method="POST" data-ajax-update="#mainContentContainer">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter name...">
                <span asp-validation-for="Name" class="text-danger"></span>
                <small id="gameNameHelp" class="form-text text-muted">The game's title.</small>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea class="form-control" maxlength="1000" asp-for="Description" rows="5" placeholder="Enter description..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <small id="gameDescHelp" class="form-text text-muted">Description of the game.</small>
            </div>

            <label asp-for="GameImage">Image (< 4MB)</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="gameImageHelp">Upload</span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" asp-for="GameImage" name="gameImage" id="gameImage" aria-describedby="gameImageHelp">
                    <label class="custom-file-label" for="gameImage">Choose file</label>
                </div>
            </div>
            <span asp-validation-for="GameImage" class="text-danger"></span>
            <button type="submit" class="btn btn-primary btn-block mt-3"><i class="fas fa-plus-circle"></i>&nbsp;Submit</button>
        </form>
   
        <div>
            <form data-ajax="true" data-ajax-loading="#spinner" data-ajax-url="/Administration/Games/All" data-ajax-method="GET" data-ajax-update="#mainContentContainer">
                <button class="btn btn-primary btn-block"><i class="fas fa-arrow-circle-left"></i>&nbsp;Back</button>
            </form>
        </div>
    </div>
</div>

<script type="application/javascript" async defer>
    $('input[type="file"]').change(function(e){
        var fileName = e.target.files[0].name;
        $('.custom-file-label').html(fileName);
    });
</script>