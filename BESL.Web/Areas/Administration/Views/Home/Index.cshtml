@{
    ViewData["Title"] = "Administration";
}
<div class="row">
    <div class="col-md-3">
        <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item list-group-item-action active" id="games" data-toggle="list" href="#list-game" role="button" aria-controls="games" data-ajax="true" data-ajax-loading="#spinner" data-ajax-url="/Administration/Games/All" data-ajax-method="GET" data-ajax-update="#gamesMainContainer">Games</a>
            <a class="list-group-item list-group-item-action" id="tournaments" data-toggle="list" href="#list-tournament" role="tab" aria-controls="tournaments" data-ajax="true" data-ajax-url="/" data-ajax-method="get" data-ajax-update="#panel">Tournaments</a>
            <a class="list-group-item list-group-item-action" id="teams" data-toggle="list" href="buttonDemo1" role="tab" aria-controls="teams">Teams</a>
            <a class="list-group-item list-group-item-action" id="players" data-toggle="list" href="#list-settings" role="tab" aria-controls="teams">Players</a>
        </div>
    </div>
    <div class="col-md-9">
        <div class="border rounded mt-1">
            <div class="tab-content" id="nav-tabContent">
                <partial name="~/Areas/Administration/Views/Partials/_SpinnerPartial.cshtml" />
                <div class="tab-pane fade show active" id="list-game" role="tabpanel" aria-labelledby="list-games-list" data-ajax="true" data-ajax-url="/Administration/Games/Create" data-ajax-method="GET" data-ajax-update="#gamesInfo">
                    @*<div class="rounded mt-1">*@
                        <div id="gamesMainContainer">

                        </div>
                    @*</div>*@
                </div>
                <div class="tab-pane fade" id="list-tournament" role="tabpanel" aria-labelledby="list-profile-list">
                    <div id="panel">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>$("#games").click()</script>
}
