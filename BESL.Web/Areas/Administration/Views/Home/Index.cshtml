@{
    ViewData["Title"] = "Administration";
}
<div class="row">
    <div class="col-md-3 mb-3">
        <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item list-group-item-action active" id="gamesItem" data-toggle="list" href="#games" role="button" aria-controls="games" data-ajax="true" data-ajax-loading="#spinner" data-ajax-url="/Administration/Games/All" data-ajax-method="GET" data-ajax-update="#gamesContentContainer"><i class="fas fa-gamepad"></i>&nbsp;Games</a>
            <a class="list-group-item list-group-item-action" id="tournamentsItem" data-toggle="list" href="#tournaments" role="tab" aria-controls="tournaments" data-ajax="true" data-ajax-loading="#spinner" data-ajax-url="/Administration/Tournaments/All" data-ajax-method="GET" data-ajax-update="#tournamentsContentContainer"><i class="fas fa-trophy"></i>&nbsp;Tournaments</a>
            <a class="list-group-item list-group-item-action" id="tournamentFormatsItem" data-toggle="list" href="#tournament-formats" role="tab" aria-controls="tournament-formats" data-ajax="true" data-ajax-loading="#spinner" data-ajax-url="/Administration/TournamentFormats/All" data-ajax-method="GET" data-ajax-update="#formatsContentContainer"><i class="fas fa-chess"></i>&nbsp;Tournament formats</a>
            <a class="list-group-item list-group-item-action" id="teams" data-toggle="list" href="#mainPane" role="tab" aria-controls="teams" data-ajax="true" data-ajax-loading="#spinner" data-ajax-url="/Administration/Formats/Create" data-ajax-method="GET" data-ajax-update="#mainContentContainer"><i class="fas fa-users"></i>&nbsp;Teams</a>
            <a class="list-group-item list-group-item-action" id="players" data-toggle="list" href="#mainPane" role="tab" aria-controls="teams"><i class="fas fa-users-cog"></i>&nbsp;Players</a>
        </div>
    </div>
    <div class="col-md-9">
        <div class="tab-content" id="nav-tabContent">
            @*Alerts render below*@
            <div style="display:none" id="alertPanel"></div>
            <partial name="~/Areas/Administration/Views/Shared/Partials/_SpinnerPartial.cshtml" />
            <div class="tab-pane fade show active" id="games" role="tabpanel" aria-labelledby="list-games-list">
                <div id="gamesContentContainer"></div>
            </div>
            <div class="tab-pane fade show active" id="tournaments" role="tabpanel" aria-labelledby="list-games-list">
                <div id="tournamentsContentContainer"></div>
            </div>
            <div class="tab-pane fade show active" id="tournament-formats" role="tabpanel" aria-labelledby="list-games-list">
                <div id="formatsContentContainer"></div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
<script>$("#gamesItem").click()</script>
<partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
