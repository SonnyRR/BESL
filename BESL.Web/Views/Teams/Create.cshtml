@model BESL.Application.Teams.Commands.Create.CreateTeamCommand
@{
    ViewData["Title"] = "Create a team";
}
<div class="border rounded">
    <h4 class="display-4 mt-2 mx-3">Create a team</h4>
    <hr />
    <div class="row">
        <div class="col-md-7">
            <form class="mx-3 my-2">
                <div class="form-group">
                    <label asp-for="Name">Team name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter team name...">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea type="text" class="form-control" asp-for="Description" placeholder="Description of the team."></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HomepageUrl">Homepage</label>
                    <input type="text" class="form-control" asp-for="HomepageUrl" placeholder="https://foo.bar"></input>
                    <span asp-validation-for="HomepageUrl"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>

