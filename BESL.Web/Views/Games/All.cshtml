@model BESL.Application.Games.Queries.GetAllGames.GamesListViewModel
@{ 
    ViewData["Title"] = "All games";
}

<div class="container">
    <div class="row">
    @foreach (var game in this.Model.Games)
    {
        <div class="col-sm-4">
            <div class="card border shadow-sm">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@game.Name</h5>
                    <p class="card-text">@game.Description.</p>
                    <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
    </div>
</div>