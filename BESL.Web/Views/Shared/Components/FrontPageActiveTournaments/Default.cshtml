
@model BESL.Application.Tournaments.Queries.GetAllTournaments.AllTournamentsViewModel
<div class="container">
    <h4 class="display-4">Current & Upcoming tournaments:</h4>
    <hr />
    <div class="row">
        @if (Model.Tournaments.Count() > 0)
        {
            @foreach (var tournament in Model.Tournaments)
            {
                <div class="col-sm-4 d-flex mb-4">
                    <div class="card border shadow-sm">
                        <img src="@tournament.TournamentImageUrl" class="card-img-top img-fluid" alt="...">
                        <div class="card-body flex-fill">
                            <h5 class="card-title">@tournament.Name</h5>
                            <p class="card-text">@tournament.Description</p>
                            <a asp-controller="Tournaments" asp-action="Details" asp-route-id="@tournament.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-12">
                <h3 class="text-danger text-center">Currently no upcoming or active tournaments available.</h3>
            </div>
        }
    </div>
</div>