@model BESL.Application.Tournaments.Queries.Common.AllTournamentsViewModel
<div class="container">
    <div class="row">
    @foreach (var tournament in Model.Tournaments)
    {
        <div class="col-sm-4">
            <div class="card border shadow-sm">
                <img src="@tournament.TournamentImageUrl" class="card-img-top img-fluid" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@tournament.Name</h5>
                    <p class="card-text">@tournament.Description</p>
                    <a asp-controller="Games" asp-action="Details" asp-route-id="@tournament.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
    </div>
</div>