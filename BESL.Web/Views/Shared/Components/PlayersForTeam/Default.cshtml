@model BESL.Application.Teams.Queries.GetPlayersForTeam.GetPlayersForTeamViewModel
@using System.Security.Claims;
@{
    var currentUserId = this.User.FindFirstValue(ClaimTypes.NameIdentifier);
}
<div class="rounded border shadow container">
    @if (Model.Players.Count > 0)
    {
        @for (int i = 0; i < Model.Players.Count; i++)
        {
            if (i + 1 < Model.Players.Count)
            {
                <div class="row">
                    <div class="col-md-6">
                        <div class="media border my-2">
                            <img src="@Model.Players[i].AvatarSmall" class="mr-3" alt="Avatar">
                            <div class="media-body">
                                <h5 class="mt-0">
                                    <a asp-controller="Players" asp-action="Details" asp-route-id="@Model.Players[i].Username">@Model.Players[i].Username</a>
                                    @if (Model.Players[i].isOwner)
                                    {
                                        <strong>[Owner]</strong>
                                    }
                                </h5>
                                @Model.Players[i].SteamId64
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="media border my-2">
                            <img src="@Model.Players[i + 1].AvatarSmall" class="mr-3" alt="Avatar">
                            <div class="media-body">
                                <h5 class="mt-0"><a asp-controller="Players" asp-action="Details" asp-route-id="@Model.Players[i + 1].Username">@Model.Players[i + 1].Username</a></h5>
                                @Model.Players[i + 1].SteamId64
                            </div>
                        </div>
                    </div>
                </div>
                i++;
            }

            else
            {
                <div class="row">
                    <div class="col-md-6">
                        <div class="media border my-2">
                            <img src="@Model.Players[i].AvatarSmall" class="mr-3" alt="Avatar">
                            <div class="media-body">
                                <h5 class="mt-0">
                                    <a asp-controller="Players" asp-action="Details" asp-route-id="@Model.Players[i].Username">@Model.Players[i].Username</a>
                                    @if (Model.Players[i].isOwner)
                                    {
                                        <strong>[Owner]</strong>
                                    }
                                </h5>
                                @Model.Players[i].SteamId64
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }
    else
    {
            <div class="d-flex justify-content-center mt-2 mb-2">
                <h4 class="text-danger">No current players</h4>
            </div>
    }
</div>