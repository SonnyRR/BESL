@model BESL.Application.Teams.Commands.InvitePlayer.InvitePlayerCommand
<div class="modal fade" id="InvitePlayerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add player</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="InviteForm" asp-controller="Teams" asp-action="Invite">
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Username</span>
                        </div>
                        <input type="text" class="form-control" asp-for="@Model.UserName">
                        <input type="hidden" class="form-control" asp-for="@Model.TeamId">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button form="InviteForm" id="SendInviteBtn" class="btn btn-primary" >Send Invite</button>
            </div>
        </div>
    </div>
</div>
